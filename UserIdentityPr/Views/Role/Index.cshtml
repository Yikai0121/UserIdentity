@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">用戶名稱</th>
            <th scope="col">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
        <tr>
            <th scope="row">@r.Id</th>
            <td>@r.Name</td>
            <td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@r.Id" method="post">
                    <a asp-action="EditRole" asp-route-id="@r.Id" class="btn btn-primary">編輯</a>
                    <button type="submit" class="btn btn-danger" 
                            onclick="return confirm('確認刪除？')">
                        删除
                    </button>
                </form>
            </td>
            
        </tr>
        
    }
        </tbody>
    </table>
    <a asp-action="AddRole" class="btn btn-danger">添加角色</a>